{
  "name": "api-hub",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --ssr",
    "preview": "pnpm run build && wrangler dev dist-server/index.js",
    "deploy": "pnpm run build && wrangler deploy dist-server/index.js",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "routes": "esno scripts/generate-routes.ts"
  },
  "dependencies": {
    "hono": "^4.7.10"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@cloudflare/vite-plugin": "^0.1.15",
    "@eslint-react/eslint-plugin": "^1.49.0",
    "@hono/vite-build": "^1.5.0",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "esno": "^4.8.0",
    "typescript": "^5.8.3",
    "vite": "^6.1.1",
    "vite-plugin-ssr-hot-reload": "^0.4.1",
    "wrangler": "^4.4.0"
  }
}
